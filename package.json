{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "better-auth:generate": "npx @better-auth/cli@latest generate --output migrations/0000_betterauth_migration.sql --config ./better-auth/auth.ts --y",
    "wrangler:migrate:local:list": "wrangler d1 migrations list prod_d1_tutorial --local",
    "wrangler:migrate:local:apply": "wrangler d1 migrations apply prod_d1_tutorial --local",
    "wrangler:migrate:remote:list": "wrangler d1 migrations list prod_d1_tutorial --remote",
    "wrangler:migrate:remote:apply": "wrangler d1 migrations apply prod_d1_tutorial --remote"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.34",
    "better-auth": "^1.3.34",
    "better-sqlite3": "^12.4.1",
    "hono": "^4.10.5",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251113.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "wrangler": "^4.4.0"
  }
}
